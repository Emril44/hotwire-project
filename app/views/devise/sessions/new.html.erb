<div class="auth-container mx-auto mt-20 max-w-md p-6 border border-gray-300 rounded-lg shadow-md text-center bg-white">
  <h2 class="text-2xl font-semibold mb-4">Login</h2>

  <%= form_with model: resource, as: resource_name, url: session_path(resource_name), class: "space-y-4" do |f| %>
    <% if flash[:alert] %>
      <p class="text-red-500 text-sm mb-2"><%= flash[:alert] %></p>
    <% end %>

    <div>
      <%= f.label :email, class: "block text-left font-semibold" %>
      <%= f.email_field :email, required: true, autofocus: true, class: "w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-left font-semibold" %>
      <%= f.password_field :password, required: true, class: "w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div class="text-right">
      <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-blue-500 hover:underline" %>
    </div>

    <%= f.submit "Login", class: "w-full py-2 bg-red-500 text-white font-bold rounded-md hover:bg-red-600 transition" %>
  <% end %>

  <p class="text-sm mt-4">
    Don't have an account?
    <%= link_to "Sign Up", new_user_registration_path, class: "text-blue-500 hover:underline" %>
  </p>
</div>

<%= render "devise/shared/links" %>
